<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <style>
      table,
      td,
      th {
        border: 1px solid black;
        border-collapse: collapse;
        padding: 20px;
      }
    </style>
    <title>Users</title>
  </head>
  <body>
    <h2>Users</h2>
    <table>
      <thead>
        <tr>
          <th>#</th>
          <th>Username</th>
          <th>Email</th>
          <th>Role</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach((user,index)=>{ %>
        <tr>
          <td><%= index + 1%></td>
          <td><%= user.name%></td>
          <td><%= user.email%></td>
          <td><%= user.role%></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </body>
</html>
